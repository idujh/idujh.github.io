@import url(https://cdn.jsdelivr.net/font-notosans-kr/1.0.0-v1004/NotoSansKR-2350.css);
*{margin:0;padding:0;box-sizing:border-box;}
html{font-size:62.5%;}
body{font-family:'NotoSansKR',sans-serif;font-size:1.4em;color:#333;
background-color: #f7f7f7;}
li{list-style:none;}
a{text-decoration:none;color:#333;}
img{vertical-align: top;border:none;max-width:100%;}
a:hover{color:#007fc0;}
a:focus{color:#007fc0;}

/* 헤더 */
.wd920{width:920px;margin:0 auto;}
.wd1089{width:1089px;margin:0 auto;}
.wrap{min-width:1089px;background-color: #fff;}
.header_top{border-bottom:1px solid #d5d5d5;overflow: hidden;
padding:6.5px 0;}
.header_top_inner{width:1089px;margin:0 auto;}
.login{float:right;margin-right:80px;overflow: hidden;}
.login>a{padding:0 6px;font-size:1.0rem;display:block;float:left;}
.login>a.on{color:#fff;background-color: #2d5894;}
.header_bot{background-color: #e9e9e9;position: relative;border-bottom:1px solid #d5d5d5;}
.gnbbg{background-color: #001f46;position: absolute;width:100%;font-size:0;
height:40px;left:0;top:40px;display:none;z-index:1;text-indent:-999px;}
.header_bot_inner{}
.header_bot_inner::after{content:'';clear:both;display:block;}
.header_bot_inner>h1{float:left;height:45px;line-height: 45px;}
.header_bot_inner>h1>a>img{vertical-align: middle;margin:0;padding:0;}
.gnbwrap{float:right;width:700px;}
.gnb{}
.gnb::after{content:'';clear:both;display:block;}
.gnb>li{float:left;width:20%;position: relative;}
.gnb>li>a{display:block;font-size:1.6rem;font-weight:400;height:45px;line-height: 45px;
color:#4e4e4e;text-align: center;border-right:1px solid #d5d5d5;}
.gnb>li:last-child>a{border-right:none;}
.gnb>li>a.on{color:#fff;background-color: #001f46;}
.gnb>li>ul{position: absolute;top:0;width:460px;z-index:1;}
.gnb>li>ul::after{content:'';clear:both;display:block;}
.gnb>li>ul>li{float:left;}
.gnb>li>ul>li>a{display:block;padding:8px 12px;font-size:1.4rem;
text-align: center;color:#fff;}
.gnb>li>ul>li>a:hover{color:#aed2ff;background:url(../image/gnb_subicon.png) 0 50% no-repeat;}
#gnb1{display:none;left:0;}
#gnb2{display:none;left:0;}
#gnb3{display:none;right:0;width:560px;}
#gnb4{display:none;right:0;width:520px;}
#gnb5{display:none;right:0;width:400px;}

/* 서브컨텐츠 */
.sub_content{}
.sub_mask{box-shadow:1px 3px 5px #ddd;}
.sub_slide{position: relative;}
.sub_slide>li{position: absolute;}
.sub_bot{margin-top:20px;padding-bottom:80px;}
.sub_bot::after{content:'';clear:both;display:block;}
.sub_left{width:210px;padding-right:50px;float:left;}
.sub_title{background:url(../image/sub1_title.jpg) 100% 50% no-repeat;
border-bottom:2px solid #686c6e;}
.sub_title>h2{font-size:2.2rem;color:#2e2e2e;line-height: 100%;font-weight:600;}
.sub_title>p{font-size:1.0rem;color:#b2babf;}
.left_list{margin-top:4px;}
.left_list>li>a{display:block;padding:8px 0;padding-left:20px;border-bottom:1px solid #e7eaec;
background:url(../image/sub_arrow1.jpg) 0 50% no-repeat;}
.left_list>li>a.on{color:#2886d2;background:url(../image/sub_arrow.jpg) 0 50% no-repeat;}
.left_banner{margin-top:20px;overflow: hidden;}
.left_banner>a{display:block;margin-top:10px;}
.sub_right{float:left;width:710px;}
.sub_right_title{border-bottom:1px solid #e4e4e4;overflow: hidden;
padding-bottom:8px;}
.title_left{float:left;}
.title_left>h2{color:#001f46;font-size:2.0rem;float:left;font-weight:600;}
.title_left>h2::after{content:'/';margin:0 4px;color:#808080;}
.title_left>p{color:#808080;float:left;position: relative;top:8px;}
.title_right{float:right;}
.title_right>p{float:left;font-size:1.2rem;color:#aeaeae;position: relative;top:10px;
padding-left:18px;}
.title_right>p:nth-child(1)::before{content:'';background:url(../image/sub_arrow_gray.jpg) 0 0 no-repeat;position: absolute;top:6px;left:0;width:10px;height:9px;}
.title_right>p:not(:first-child)::before{content:'';background:url(../image/sub_right_arrow.png) 0 0 no-repeat;width:14px;height:14px;position: absolute;top:3px;left:1px;
-webkit-background-size: cover;background-size: cover;}

/* 게시판 */
.bo_tit {
    color: #333;
    font-weight: 400;
}
.title_icon{vertical-align: middle;}


/* 푸터 */
.footer{background-color: #f7f7f7;padding:20px 0 30px 0;
border-top:1px solid #ddd;}
.footer_inner{overflow: hidden;}
.footer_inner>h6{float:left;}
.footer_text{float:left;margin-left:80px;}
.information>a{font-size:1.2rem;color:#4e524a;}
.copyright{font-size:1.2rem;color:#979a95;margin-top:10px;}
#form{float:right;margin-top:26px;}
#form label{font-size:1.3rem;color:#6e6e6e;padding-right:6px;}
#select{width:130px;outline:none;box-shadow:none;border: 1px solid #ddd;
font-size:1.3rem;color:#333;}
#select:hover{box-shadow:none;border: 1px solid #ddd;}
#select:focus{box-shadow:none;border: 1px solid #ddd;}