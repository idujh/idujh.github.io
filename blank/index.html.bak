<script>
$(document).ready(function(){

//헤더
$('.header').height($(window).height())
$(window).on('load resize',function(){
var height=$(window).height()
$('.header').height(height)
})
$('<div class="menu_bd"></div>').appendTo('.menu>li>a')
$('.menu>li>a').each(function(index){
$(this).on('mouseenter focus',function(){
var color=['#e93f36','#3ce837','#2f97ff','#e139e6','#e9f40d']
$('.menu>li>a').stop().animate({color:'#fff'})
$(this).stop().animate({color:color[index]})
$('.menu_bd').css({left:'-100%',backgroundColor:'#fff'})
$(this).find('.menu_bd').stop().animate({left:'100%',backgroundColor:color[index]},1000)
})
})
$(window).on('scroll',function(){
var top=$(window).scrollTop()
if (top>100)
{
$('.menu>li>a').css({color:'#fff',textShadow:'0 0 3px #000'})
$('.header_inner h1>a>img').attr({src:'image/logo_hover.jpg'})
$('.header_inner').css({position:'fixed',top:0,left:0,right:0,backgroundColor:'#fff',borderBottom:'1px solid #efefef'})
}else{
$('.menu>li>a').css({color:'#fff',textShadow:'0 0 3px transparent'})
$('.header_inner h1>a>img').attr({src:'image/top_logo.png'})
$('.header_inner').css({position:'static',top:0,left:0,right:0,backgroundColor:'transparent',borderBottom:'1px solid transparent'})
}
})

//컨텐츠
$(window).on('load resize',function(){
var width=$(window).width()
$('.mask').width(width)
$('.slide>li>a').width(width)
$('.slide>li>a>img').wudth(width)
})
var now=1
var total=$('.slide>li').length
var loop=setInterval(function(){
if (now==total)
{
	now=0
}
now++
$('.slide').stop().animate({left:'-=100%'},function(){
$('.slide>li').first().appendTo('.slide')
$('.slide').css({left:0})
})
$('.progress_move').css({width:0})
$('.progress_move').stop().animate({width:'100%'},5000,'linear')
$('.count>span>span').html(now+'&nbsp;')
},5000)

$('.next').on('click',function(){
if (now==total)
{
	now=0
}
now++
$('.slide').stop().animate({left:'-=100%'},function(){
$('.slide>li').first().appendTo('.slide')
$('.slide').css({left:0})
})
$('.count>span>span').html(now+'&nbsp;')
return false
})

$('.prev').on('click',function(){
if (now==1)
{
	now=total+1
}
now--
$('.slide>li').last().prependTo('.slide')
$('.slide').css({left:'-100%'})
$('.slide').stop().animate({left:'+=100%'})
$('.count>span>span').html(now+'&nbsp;')
return false
})

$('.slide>li>a').on('click',function(){
return false
})
 
//컨텐츠


})//ready
</script>
