

*{padding:0;margin:0;}

body {font-family:"Noto Sans KR","나눔고딕","돋움",sans-serif; 
font-size:14px;
color:#333;}

li{list-style:none;}

a,a:hover{text-decoration:none;
color:black;}

img{border:0;
vertical-align:top;}

.header{width:100%;
box-shadow:5px 5px 5px #c5c5c5;
}

.inner{width:1200px;
margin:0 auto;
position:relative;
height:70px;}

.inner h1{float:left;
margin-top:5px;}

.inner>ul>li>a{float:left;
margin-left:50px;
line-height:67px;
text-align:center;
height:67px;
width:100px;
font-size:16px;
}

.inner>ul>li>a:hover{border-bottom:3px solid #ffd200;}

.gnbwrap{height:384px;
width:1200px;
top:70px;
z-index:99;
position:absolute;
display:none;
}

.sub{width:600px;
background-color:#FFF;
position:absolute;
left:320px;
top:0;
height:384px;
}

.sub>li>a{margin-top:20px;
display:inline-block;
font-size:14px;
}

.sub1{position:absolute;
left:320px;
top:0;
width:150px;
text-align:center;
}

.sub2{position:absolute;
left:470px;
top:0;
width:150px;
text-align:center;
}

.sub3{position:absolute;
left:620px;
top:0;
width:150px;
text-align:center;
}

.sub4{position:absolute;
left:770px;
top:0;
width:150px;
text-align:center;
}

.login{position:absolute;
top:23px;
right:0;}

.login>a{margin-right:20px;
}

.gnbwrap>.guide{position:relative;
top:0;
left:320px;
width:320px;
height:384px;}

.gnbtitle{position:absolute;
left:0;
top:0;
width:320px;
height:384px;
color:white;
padding:20px 20px;}

.guide{position:absolute;
left:920px;
width:280px;
top:0;
height:384px;
background-color:#eeeeee;
}

.guide>li>a{margin-top:50px;
margin-left:70px;
display:inline-block;
height:48px;
line-height:48px;
}

.guide>li>a>img{margin-right:10px;}

.bg{
width:100%;
height:100%;
background-color:rgba(0,0,0,0.7);
position:absolute;
top:0;
display:none;
}

.content{width:100%;
height:100%;
position:relative;

}

.content1{
width:1200px;
margin:0 auto;
overflow:hidden;
}

.event{width:1600px;
position:relative;
height:600px;
margin-top:20px;
}

.event>ul{position:absolute;}

.event>ul>li{float:left;}

.event>ul>li>a{display:block;
width:400px;}

.event>ul>li>a>strong{margin:10px;
display:block;}

.prev1{width:50px;
height:50px;
background:url(../image/ico_main_arrow.png) 15px 13px no-repeat;
position:absolute;
left:10px;
top:120px;
z-index:9;
background-color:rgba(0,0,0,0.5);
border-radius:50%;
}

.next1{width:50px;
height:50px;
background:url(image/ico_main_arrow.png) 20px -38px no-repeat;
position:absolute;
left:1140px;
top:120px;
z-index:9;
background-color:rgba(0,0,0,0.5);
border-radius:50%;
}

.news{position:absolute;
top:520px;
width:280px;
margin:10px;}

.news>h3{float:left;
}
.news>ul{float:left;}

.quick{width:100%;
margin-top:60px;
height:100px;
z-index:1;
box-shadow:5px 5px 5px#c5c5c5;}

.quick>ul{float:left;}

.quick>ul>li{float:left;}

.quick>ul>li>a{width:299px;
height:100px;
line-height:100px;
display:block;
text-align:center;
border-right:1px solid #e0e0e0;
font-size:16px;
font-weight:bold;
}

.quick>ul>li>a.right{border-right:0;}

.quick>ul>li>a>img{float:right;
margin-right:60px;
margin-top:25px}

.visual{width:6000px;
height:520px;
position:relative;}

.visual>ul{
position:absolute;}

.visual>ul>li{float:left;
}

.prev{width:50px;
