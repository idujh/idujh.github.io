<!doctype html>
<html lang="ko">
<head>
<link rel="stylesheet" href="css/font.css">
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width">
<!-- IE 브라우져 최신버젼 렌더링 모드 오류를 최대로 줄여줄수 있음. -->
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<!-- saved from url=(0013)about:internet -->

<title>Document</title>

<script src="https://code.jquery.com/jquery-latest.min.js"></script>
<script src='js/jquery-ui.min.js'></script>
<script src='js/jquery.transit.min.js'></script>

<script>
$(document).ready(function(){
//헤더
$('.gnb>li>a').each(function(index){
$(this).on('mouseenter focus',function(){
var move=$(this).position()
var color=['#d03231','#ccd031','#6cd130','#31c0d0','#2f3fd2','#cd30d1']
$('.movebd').stop().animate({left:move.left+28,width:$(this).width(),backgroundColor:color[index]},600)
$('.gnb>li>a').css({color:'#333'})
$(this).stop().animate({color:color[index]},600)
})
})
$('.Language_btn').click(function(){
$('.Language_show').slideToggle()
})
$('.Language_btn').blur(function(){
$('.Language_show').slideToggle()
})
$('.search_btn').on('click',function(){
$('.form').show('fold')
})
$('.search_wrap').on('mouseleave blur',function(){
$('.form').hide('fold')
})

//슬라이더
$('.slide>li').hide()
$('.slide>li').eq(2).show()
$('.slide_select>a').each(function(index){
$(this).click(function(){
$('.slide>li').hide()
$('.slide>li').eq(index).show()
$('.slide_text').css({opacity:0,left:0})
$('.slide_text').eq(index).delay(600).animate({left:100,opacity:1},600,'linear')
$('.slide>li>img').css({scale:1.1,opacity:0})
$('.slide>li>img').stop().animate({scale:1,opacity:1},1000,'linear',function(){
})
})
})






})//
</script>
<style>
*{margin:0;padding:0;box-sizing:border-box;}
html{font-size:62.5%;}
body{font-family:'Noto Sans KR',sans-serif;font-size:1.4em;color:#333;}
li{list-style:none;}
a{text-decoration:none;color:#333;}
img{vertical-align: top;border:none;max-width:100%;}
a:hover{color:#d03231;}
a:focus{color:#d03231;}
.wd1325{width:1325px;margin:0 auto;}

/* 헤더 */
.wrap{min-width:1325px;}
.header{background:url(image/bg_top_h.jpg) 0 0 repeat;}
.header_top{padding:10px 0;}
.header_top::after{clear:both;content:'';display:block;}
.header_top_right{float:right;}
.home{float:left;}
.home>a{color:#fff;font-size:1.1rem;margin:0 15px;font-weight:500;}
.home>a.on{color:#d03231;}
.home>a:hover{color:#d03231;}
.Language{float:left;margin:0 15px;position: relative;}
.Language>a{font-size:1.1rem;color:#fff;display:block;padding:0 28px;
background-image: url(image/korean.png),url(image/flag_arrow.png);
background-position: 1% 50%,99% 50%;border: 1px solid #dbdbdb;
background-repeat: no-repeat;font-weight:500;}
.Language>a:hover{color:#d03231;}
.Language_show{position: absolute;left:0;top:19px;width:100%;display:none;
border: 1px solid #ddd;background-color: #fff;border-top:none;z-index:2;}
.Language_show>a{display:block;font-size:1.1rem;color:#999999;
text-align: right;padding:10px 15px;font-weight:500;}
.Language_show>a:hover{color:#d03231;}
.ENG{background:url(image/usa.png) 20% 50% no-repeat;}
.CHN{background:url(image/china.png) 20% 50% no-repeat;}
.header_bottom{background-color: #fff;}
.header_bottom_inner{position: relative;}
.header_bottom_inner::after{content:'';clear:both;display:block;}
.header_bottom_inner>h1{float:left;margin-top:6px;}
.header_bottom_inner>h1>a>img{vertical-align: middle;}
.gnb_wrap{position: relative;float:right;margin-right:100px;}
.movebd{position: absolute;bottom:0;left:0;height:3px;width:0px;
background-color: #d03231;text-indent:-999px;font-size:0;}
.gnb{}
.gnb>li{float:left;}
.gnb>li>a{display:block;padding:18px 30px;font-size:1.6rem;
border-bottom:2px solid transparent;}
.gnb>li:not(:last-child){background:url(image/bg_gnb_ball.jpg) 100% 50% no-repeat;}


.search_wrap{position: absolute;right:0;top:0;display:table;}
.search_wrap>a{display:table-cell;vertical-align: middle;padding:17px 20px;
border-bottom: 2px solid #f3cbcb;}
.form{position: absolute;top:0;left:-200px;display:none;}
.form label{font-size:0;text-indent:-999px;display:none;}
.form #search{border: none;background-color: #333;color:#fff;
border: 1px solid #ddd;border-right:none;width:200px;height:40px;line-height: 40px;padding-left:20px;position: relative;top:10px;}
#search::placeholder{font-family:'Noto Sans KR',sans-serif;color:#fff;
font-size:1.4rem;}
.content{}
.mask{position: relative;width:100%;height:600px;}
.slide>li{width:100%;position: absolute;left:50%;top:0;text-align: center;
max-width:1920px;margin-left:-960px;overflow: hidden;}
.slide>li>img{height:600px;}
.slide_text{position: absolute;top:100px;left:100px;color:#fff;padding:60px;
background-color:rgba(0,0,0,0.5);text-align: left;}
.slide_text h2{font-size:2.2rem;position: relative;}
.slide_text h2::after{content:'';position: absolute;bottom:-14px;left:0;width:80px;
height:5px;background-color: #d03231;}
.slide_text p{font-size:3.8rem;line-height: 120%;margin-top:20px;font-weight:500;}
.slide_text a{margin-top:20px;background-color: #d03231;color:#fff;
display:inline-block;padding:4px 50px;font-size:1.2rem;}
.slide_select{position: absolute;
bottom:-165.5px;left:50%;margin-left:-662.5px;max-width:1325px;}
.slide_select::after{clear:both;content:'';display:block;}
.slide_select>a{display:block;float:left;width:25%;}





</style>
</head>
